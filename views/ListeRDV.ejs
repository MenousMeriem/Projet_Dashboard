<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Liste des patients </title>
    <link rel="stylesheet" href="/CSS/index.css">
    <link rel="stylesheet" href="/CSS/ListePatients.css">
      <!------- MONTSERRAT FONT  ---------->
      <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates&display=swap" rel="stylesheet">

      <!--------------- ICON - GOOGLE ------------------->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

</head>

<body>
    
    <div class="grid-container">

        <!-- Header -->

            <%- include('Header')%>

        <!-- Header -->


        <!-- Sidebar -->

            <%- include('Sidebar');%>

        <!-- Sidebar -->

        <!-- Main -->
        <main class="main-container">
        
            <div class="main-card">
                
                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/ListeRDV"><p class="text-primary"> Afficher </p></a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/FormulaireRDV"><p class="text-primary"> Ajouter </p></a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/Modifier"><p class="text-primary"> Modifier </p></a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/Supprimer"><p class="text-primary"> Supprimer </p></a>
                    </div>
                </div>
            </div>

            <div class="main-title">
                <p class="font-weight-bold"> Liste des rendez-vous </p>
            </div>

            <%console.log(patients)%>

            <% patients.forEach(p => { %> 
                
                <div class="card">
                    <div class="card-inner">
                        <h4>Nom : <%=p.Nom%></h4>
                    </div>
                    <div class="card-inner">
                        <h4>Prenom : <%=p.Prenom%></h4>
                    </div>
                    <div class="card-inner">
                        <h4> Code RDV : <%= p.CodeRDV%></h4> 
                    </div>
                    <div class="card-inner">
                        <h4> Date : <%= p.DateRDV%></h4>
                    </div>
                    <div class="card-inner">
                        <h4> Heure RDV : <%= p.HeureRDV%></h4>
                    </div>
                    <div class="card-inner">
                        <h4> Description des Rendez vous : <%= p.DescRDV%></h4>
                    </div>
                    <div class="card-inner">
                        <input type="button" value="Supprimer" onclick="onDelete2('<%=p.CodeRDV%>')">
                        <input type="submit" value="Modifier">
                    </div>
                </div>
           
            <% })%> 
        
            
        </main>
        <!-- Main -->


    </div>
<script src="JS/Index.js"></script>
</body>


</html>