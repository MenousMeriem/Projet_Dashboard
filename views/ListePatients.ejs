<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Liste des patients </title>
    <link rel="stylesheet" href="CSS/index.css">
    <link rel="stylesheet" href="CSS/ListePatients.css">
      <!------- MONTSERRAT FONT  ---------->
      <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates&display=swap" rel="stylesheet">

      <!--------------- ICON - GOOGLE ------------------->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

</head>

<body>
    
    <div class="grid-container">

        <!-- Header -->

            <%- include('Header')%>

        <!-- Header -->


        <!-- Sidebar -->

            <%- include('Sidebar');%>

        <!-- Sidebar -->

        <!-- Main -->
        <main class="main-container">
        
            <div class="main-card">
                
                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/ListePatients"><p class="text-primary"> Afficher </p></a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/Formulaire"><p class="text-primary"> Ajouter </p></a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/Modifier"><p class="text-primary"> Modifier </p></a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <span class="material-icons-outlined text-blue">inventory_2</span>
                        <a href="/Supprimer"><p class="text-primary"> Supprimer </p></a>
                    </div>
                </div>
            </div>

            <div class="main-title">
                <p class="font-weight-bold"> Liste des patients </p>
            </div>

            <% patient.forEach(element => { %> 
                
       
                <div class="card">
                    <div class="card-inner">
                        <h4> Code : <%= element.Code%></h4> 
                    </div>
                    <div class="card-inner">
                        <h4>Nom : <%= element.Nom%></h4>
                    </div>
                    <div class="card-inner">
                        <h4>Pr√©nom : <%= element.Prenom%></h4>
                    </div>
                    <div class="card-inner">
                        <h4>Sexe : <%= element.Sexe%></h4>
                    </div>
                    <div class="card-inner">
                        <h4>Age : <%= element.Age%></h4>
                    </div>
                    <div class="card-inner">
                        <h4> Date de naissance : <%= element.DateNais.toString().slice(4,15)%></h4> 
                    </div>
                    <div>
                        <input type="button" value="Supprimer" onclick="onDelete('<%=element.Code%>')">
                        <input type="submit" value="Modifier" onclick="onDelete('<%=element.Nom%>')">
                    </div>
                </div>

            
           
            <% })%> 
        
            
        </main>
        <!-- Main -->


    </div>
<script src="JS/Index.js"></script>
</body>


</html>